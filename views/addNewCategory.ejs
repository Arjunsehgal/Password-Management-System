                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Category Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="passwordcategory" placeholder="Enter Your Password Category Name" required minlength="2">
                                </div>
                            </div>
  
