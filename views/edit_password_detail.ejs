<%- include('header') %>
    
      <div class="container">
        <div class="row">
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Edit Password Details</div>
                         </div>  
                    <div class="panel-body" >
                      <% if(type == 'success'){ %>
                        <% if( msg != ''){ %>
                        <p class="alert alert-success" style="text-align: center" role="alert"> <strong> Success!</strong> <%= msg %></p>
                        <% }} %>
                        <% if( type == 'fail'){ %>
                            <% if( msg != ''){ %>
                            <p class="alert alert-danger" style="text-align: center" role="alert"> <strong>Alert!</strong> <%= msg %></p>
                            <% }} %>
                        <form action="/password-detail/edit/<%= record._id %>" id="passwordform" class="form-horizontal" method="post"  role="form" >
                            
                            <!-- <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                            </div> -->

                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Choose Category</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="pass_cat">
                                        <option value="">Choose Password Category</option>
                                        <% if(records.length > 0){
                                         records.forEach(function(row){
                                         %>
                                         <!-- <option value="<%= row.password_category %>"><%= row.password_category %></option> -->
                                        <option value="<%= row.password_category %>" 
                                            <% if(row.password_category == record.password_category) { %>
                                                 selected <% } %>> <%= row.password_category %>
                                                </option>
                                        <%  }) } %>
                                       </select>
                                </div>
                            </div>

                            <div class="form-group">
                              <label for="username" class="col-md-3 control-label">Project Name / Description</label>
                              <div class="col-md-9">
                                  <input type="textbox" class="form-control"  name="project_name_or_description" rows="2" placeholder="Enter Your Project Name or Description" value="<%= record.project_name %>" >
                              </div>
                          </div>
                                
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Details</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" id="editor" name="pass_details" rows="5" placeholder="Enter Your Password" minlength="2" required ><%= record.password_detail %></textarea>
                                </div>
                            </div>
                            <input type="hidden" name="id" value="<%= record._id %>">
                            <div class="form-group">
                                <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Update Password" class="btn btn-primary">   
                                </div>
                            </div>  
                            <p> <a href="/view-all-password">View All Passwords</a></p>
  
                        </form>
                     </div>
                </div>
        </div>
      </div>
    </div>
    <script>
      CKEDITOR.replace( 'editor' );
  </script>
  <%- include('footer') %>
